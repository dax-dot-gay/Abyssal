    "/users/self": {
      "get": {
        "tags": [
          "Users"
        ],
        "operationId": "get_user_self",
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericUser"
                }
              }
            }
          },
          "500": {
            "description": "[500 Internal Server Error](https://developer.mozilla.org/en-US/docs/Web/HTTP/Status/500)",
            "content": {
